<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Colty Ball!"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Points/Scoring Odds"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt0"
                android:text="200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt1"
                android:text="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt2"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt3"
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt4"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonClear"
                android:onClick="onClickClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear" />
            <Button
                android:id="@+id/buttonHit"
                android:onClick="onClickHit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hit!" />
            <TextView
                android:id="@+id/txtHit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="Hit It!"
                android:textSize="36sp" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Score"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TableRow>
                    <TextView android:text="Inning"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_column="0"
                        android:layout_weight="1"/>
                    <TextView android:text="Colty"
                        android:layout_width="30dp"
                        android:layout_column="1"
                        android:layout_weight="1">
                    </TextView>
                    <TextView android:text="Other"
                        android:layout_width="30dp"
                        android:layout_column="2"
                        android:layout_weight="1">
                    </TextView>
                </TableRow>
                <ScrollView android:layout_height="match_parent">
                    <TableLayout android:id="@+id/score_table"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TableRow>
                            <TextView android:text="1"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                        <TableRow>
                            <TextView android:text="2"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                        <TableRow>
                            <TextView android:text="3"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                        <TableRow>
                            <TextView android:text="4"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                        <TableRow>
                            <TextView android:text="5"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                        <TableRow>
                            <TextView android:text="6"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                        <TableRow>
                            <TextView android:text="7"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                        <TableRow>
                            <TextView android:text="8"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                        <TableRow>
                            <TextView android:text="9"
                                android:layout_marginLeft="10dp"
                                android:layout_width="100dp"
                                android:layout_column="0"
                                android:layout_weight="1">
                            </TextView>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                            <EditText android:text=""
                                android:layout_width="30dp"
                                android:layout_column="2"
                                android:layout_weight="1"
                                android:inputType="number">
                            </EditText>
                        </TableRow>
                    </TableLayout>
                </ScrollView>
            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>